{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun run --env-file=../.env.production src/app.ts",
    "dev": "NODE_ENV=development bun run --hot --env-file=../.env.development src/app.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config drizzle.dev.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.dev.config.ts",
    "db:drop": "drizzle-kit drop --config drizzle.dev.config.ts",
    "db:generate:prod": "drizzle-kit generate --config drizzle.prod.config.ts",
    "db:migrate:prod": "drizzle-kit migrate --config drizzle.prod.config.ts",
    "db:drop:prod": "drizzle-kit drop --config drizzle.prod.config.ts",
    "db:dropdata": "NODE_ENV=development bun run src/scripts/drop.ts",
    "db:seed:admin": "NODE_ENV=development bun run src/scripts/seedAdmin.ts"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "zod": "^4.1.9"
  }
}
