{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/data/**/*.json",
    "src/env-runtime.ts",
    "src/env.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
